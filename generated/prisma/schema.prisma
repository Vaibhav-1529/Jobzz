generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model job {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  location        String
  salary          Int
  employment_type String
  job_type        String
  apply_through   String
  companyId       String
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     String
}

model company {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  ownerId     String @unique
}
